<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:theme="@style/TemaSemBarra"
    tools:context=".CadastroFisico_Activity">


    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
                        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Completo:"
            android:textColor="@color/colorFonte"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtNomeFisico"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/borda" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPF:"
            android:textColor="@color/colorFonte"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtCpfFisico"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/borda" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="E-mail:"
        android:textColor="@color/colorFonte"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txtEmailFisico"
        android:layout_width="386dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/borda"
        android:textColorHint="@color/colorFonte" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Insira uma senha:"
        android:textColor="@color/colorFonte"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="386dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/borda"
        android:drawableRight="@drawable/ic_lock_dp"
        android:hint=""
        android:inputType="textPassword"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Confirme sua senha:"
        android:textColor="@color/colorFonte"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txtSenhaConfirme"
        android:layout_width="386dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/borda"
        android:drawableRight="@drawable/ic_lock_dp"
        android:inputType="textPassword"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone:"
            android:textColor="@color/colorFonte"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtTel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/borda" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="Selecione a empresa:"
        android:textColor="@color/colorFonte"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/chbEmpresa"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@color/colorFonte" />

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelarFisico"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttonmenor"
            android:padding="10dp"
            android:text="Cancelar"
            android:textColor="@color/colorFonte"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttonmenor"
            android:padding="10dp"
            android:text="Enviar"
            android:textColor="@color/colorFonte"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>