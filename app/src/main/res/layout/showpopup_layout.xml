<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:background="@color/colorBackground"
    android:theme="@style/TemaSemBarra"
    android:orientation="vertical"
    tools:context=".ShowPopup_ctivity">

    <Button
        android:id="@+id/btnJuridico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:padding="10dp"
        android:onClick="PJuridica"
        android:text="Pessoa Jurídica"
        android:textAlignment="center"
        android:textColor="@color/colorFonte" />

    <Button
        android:id="@+id/btnFisica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:onClick="PFisica"
        android:text="Pessoa Física"
        android:textAlignment="center"
        android:textColor="@color/colorFonte" />

</LinearLayout>