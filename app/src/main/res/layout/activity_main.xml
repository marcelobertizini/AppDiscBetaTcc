<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="Avaliação Comportamental"
        android:textColor="@color/colorFonte"
        android:textSize="25dp" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginTop="10sp"
    >



    <Button
        android:id="@+id/angry_btn"

        android:text="D"
        android:textColor="#FFFFFF"
        android:textSize="80sp"

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/botao_d"
        android:shadowColor="#4F4F4F"
        android:shadowDx="-4"
        android:shadowDy="6"
        android:shadowRadius="7"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/angry_btn2"

        android:text="I"
        android:textColor="#FFFFFF"
        android:textSize="80sp"

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/botao_i"
        android:shadowColor="#4F4F4F"
        android:shadowDx="-4"
        android:shadowDy="6"
        android:shadowRadius="7"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
       android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/angry_btn3"

            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="80sp"

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/botao_c"
            android:shadowColor="#4F4F4F"
            android:shadowDx="-4"
            android:shadowDy="6"
            android:shadowRadius="7"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/angry_btn4"

            android:text="S"
            android:textColor="#FFFFFF"
            android:textSize="80sp"

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/botao_s"
            android:shadowColor="#4F4F4F"
            android:shadowDx="-4"
            android:shadowDy="6"
            android:shadowRadius="7"
            />


    </LinearLayout>

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="ShowPopup"
        android:padding="10dp"
        android:text="Cadastrar"
        android:textColor="@color/colorFonte"
        android:textSize="20dp"


        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:onClick="Login"
        android:padding="10dp"
        android:text="Login"
        android:textColor="@color/colorFonte"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:onClick="Sair"
        android:padding="10dp"
        android:text="Sair"
        android:textColor="@color/colorFonte"
        android:textSize="20dp" />

</LinearLayout>
   </ScrollView>
</LinearLayout>

